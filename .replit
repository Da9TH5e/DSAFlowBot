modules = ["python-3.12", "web", "nodejs-20"]
[agent]
expertMode = true

[nix]
channel = "stable-25_05"
packages = ["cargo", "ffmpeg-full", "libiconv", "rustc"]

run = "python3 manage.py runserver 0.0.0.0:8000"

language = "python"

[env]
PYTHONUNBUFFERED = "1"
DJANGO_SETTINGS_MODULE = "mysite.settings"
PYTHONPATH = "."

[unitTest]
pattern = "test*.py"

[[ports]]
localPort = 8000
externalPort = 80
